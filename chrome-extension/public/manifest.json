{
    "name": "Review Genie",
    "version": "1.0",
    "manifest_version": 3,
    "description": "An extension to review customer feedback.",
    "icons": {
        "16": "icons/logoGenie-16.png",
        "48": "icons/logoGenie-48.png",
        "128": "icons/logoGenie-128.png"
    },
    "background": {
        "service_worker": "/background.js"
    },
    "action": {
        "default_popup": "/src/Home.html",
        "default_icon": "icons/logoGenie-48.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "/src/Home.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ]
}