{
  "name": "Review Central",
  "description": "Review Central is a Chrome extension that helps you to manage your reviews.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/landing.html",
    "default_icon": "assets/content_article_review.png"
  },
  "host_permissions": [
    "https://localhost/*",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ]
}